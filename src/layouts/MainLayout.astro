---
import Layout from "./Layout.astro";
import Header from "../components/Header.astro";
import ServiceHeader from "../components/ServiceHeader.astro";
// import Footer from "../components/Footer.astro";
import Footer2 from "../components/Footer2.astro";
const currentPath = Astro.url.pathname;
---

<Layout>
  {currentPath === '/services' || currentPath === '/about' || currentPath === '/contact' || currentPath === '/articles' || currentPath === '/tax-organizer'? <ServiceHeader /> : <Header />}
  <slot/>

  <Footer2 />
  <!-- {currentPath === '/services' || currentPath === '/about' || currentPath === '/contact' || currentPath === '/articles' || currentPath === '/tax-organizer'? <Footer2 /> : <Footer />} -->
</Layout>
